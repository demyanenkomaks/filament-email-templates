{
    "name": "maksde/filament-email-templates",
    "version": "1.0.0",
    "description": "Редактор шаблонов электронных писем для Filament",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Maksde\\FilamentEmailTemplates\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Demyanenko Maksim",
            "email": "demyanenkomaks0@gmail.ru"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "filament/filament": "^3.0",
        "spatie/laravel-package-tools": "^1.9",
        "schmeits/filament-character-counter": "^1.3"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.0",
        "laravel/pint": "^1.13",
        "larastan/larastan": "^3.3",
        "fakerphp/faker": "^1.23"
    },
    "scripts": {
        "pint": "./vendor/bin/pint",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=-1",
        "rector": "./vendor/bin/rector process --clear-cache",
        "rector:dry": "./vendor/bin/rector process --clear-cache --dry-run",
        "fix": [
            "@rector",
            "@pint",
            "@phpstan"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Maksde\\FilamentEmailTemplates\\FilamentEmailTemplatesServiceProvider"
            ]
        }
    }
}
